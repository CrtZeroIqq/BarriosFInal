<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.gallery.GalleryFragment">

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="100dp"
        android:columnCount="2"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- ImageButton 1 -->
        <ImageButton
            android:id="@+id/asalto"
            android:layout_width="180dp"
            android:layout_height="63dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:scaleType="fitCenter"
            android:src="@drawable/asalto" />

        <!-- ImageButton 2 -->
        <ImageButton
            android:id="@+id/violencia"
            android:layout_width="180dp"
            android:layout_height="63dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:scaleType="fitCenter"
            android:src="@drawable/violencia" />

        <!-- ImageButton 3 -->
        <ImageButton
            android:id="@+id/colision"
            android:layout_width="180dp"
            android:layout_height="63dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:scaleType="fitCenter"
            android:src="@drawable/colision" />

        <!-- ImageButton 4 -->
        <ImageButton
            android:id="@+id/homicidio"
            android:layout_width="180dp"
            android:layout_height="63dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:scaleType="fitCenter"
            android:src="@drawable/homicidio" />

        <!-- ImageButton 5 -->
        <ImageButton
            android:id="@+id/corteluz"
            android:layout_width="180dp"
            android:layout_height="63dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:scaleType="fitCenter"
            android:src="@drawable/corteluz" />

        <!-- ImageButton 6 -->
        <ImageButton
            android:id="@+id/corteagua"
            android:layout_width="180dp"
            android:layout_height="63dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:scaleType="fitCenter"
            android:src="@drawable/corteagua" />

        <!-- ImageButton 7 -->
        <ImageButton
            android:id="@+id/basura"
            android:layout_width="180dp"
            android:layout_height="63dp"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:scaleType="fitCenter"
            android:src="@drawable/basura" />

        <!-- ImageButton 8 -->
        <ImageButton
            android:id="@+id/calles"
            android:layout_width="180dp"
            android:layout_height="63dp"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:scaleType="fitCenter"
            android:src="@drawable/calles" />

        <!-- ImageButton 9 -->
        <ImageButton
            android:id="@+id/luminarias"
            android:layout_width="180dp"
            android:layout_height="63dp"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:scaleType="fitCenter"
            android:src="@drawable/luminarias" />

    </GridLayout>

    <TextView
        android:id="@+id/textGallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout"
        app:layout_constraintVertical_bias="0.375" />
</androidx.constraintlayout.widget.ConstraintLayout>